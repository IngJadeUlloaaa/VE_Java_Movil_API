<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- Sombra -->
        <shape android:shape="rectangle">
            <corners android:radius="12dp" /> <!-- Bordes redondeados opcionales -->
            <solid android:color="#33000000" /> <!-- Color de la sombra -->
        </shape>
    </item>
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="6dp">
        <!-- Fondo principal -->
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/white" /> <!-- Color del fondo -->
        </shape>
    </item>
</layer-list>
